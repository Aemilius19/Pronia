@using ProniaWeb.Models;
@model List<Category>
    @{int count=0;}
<div class="row ml-4">
    <table>
        <tbody>
            <tr>
                <style>
                    /* CSS to add space between table cells */
                    td {
                        
                        padding-right: 200px; /* Adjust as needed */
                    }
                </style>
                <td><h2>Category</h2></td>

                <td><a class="btn btn-primary " asp-action="create" >Create</a></td>
            </tr>
        </tbody>
    </table>
    
</div>
<div class="=container">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Count</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                count++;
            <tr>
                <th scope="row">@count</th>
                <td>@item.Name</td>
                <td>@item.Products.Count()</td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>